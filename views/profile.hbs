<h1 class="card-panel teal lighten-2">Profile</h1>
<div class="profile">
  <div class="row">
      <div class="col s3">
        {{#if user.avatarUrl}}
        <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
        <img class="avatar"
          src="https://st.depositphotos.com/1779253/5140/v/450/depositphotos_51402215-stock-illustration-male-avatar-profile-picture-use.jpg"
          alt="avaTemp">
        {{/if}}
      </div>

      <div class="col s4">
        <form action="/profile" method="POST" enctype="multipart/form-data">
          <p><b>Your email:</b> <strong>{{user.email}}</strong></p>
          <div class="input-field">
            <input id="name" name='name' type="text" class="validate" required value="{{user.name}}">
            <label for="name">Name</label>
            <span class="helper-text" data-error="Enter name"></span>
          </div>

          <div class="file-field input-field">
            <div class="btn">
              <span>Avatar</span>
              <input type="file" name="avatar">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>

          <input type="hidden" name="_csrf" value="{{csrf}}">

          <button type="submit" class='btn'>Update</button>

        </form>
      </div>
    <div class="col2">
      <a href="/orders"><button class='waves-effect waves-light btn-large' style="float:none"><i class="material-icons">description</i>Orders</button></a>
    </div>
  </div>
</div>
