<div class="nav-wrapperBread">
  <div class="col s12">
    <a href="/" class="breadcrumb">HOME</a>
  </div>
</div>

<h1 class="card-panel teal lighten-2">Your orders</h1>
<div class="orders">
{{#if orders.length}}
  {{#each orders}}
    <div class="rowOrders">
      <div class="col s4">
        <div class="card">
          <div class="card-content">
            <span class="card-title">
              Order â„– <small>{{_id}}</small>
            </span>
            <p class='date'>{{date}}</p>
            <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>
            
            <ol>
              {{#each products}}
              <li>
                {{product.title}} (x<strong>{{count}}</strong>)
              </li>
              {{/each}}
            </ol>

            <hr>
            <p>Price: <span class='price'>{{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <h1>No orders yet</h1>
{{/if}}
</div>