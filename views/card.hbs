<div class="nav-wrapperBread">
  <div class="col s12">
    <a href="/" class="breadcrumb">HOME</a>
  </div>
</div>

<h1 class="card-panel teal lighten-2">Cart</h1>
<div class='cart'>
  <div id='card'>
    {{#if products.length}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Group</th>
          <th>Count</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{title}}</td>
          <td>{{group}}</td>
          <td>{{count}}</td>
          <td>
            <button class='btn btn-small js-remove' data-id={{id}} data-csrf="{{@root.csrf}}">Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <p><strong>Price: </strong><span class="price">{{price}}</span></p>
    <form action="/orders" method="POST">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button type="submit" class='btn'>Place your order</button>
    </form>
    
  </div>
  {{else}}
    <h1>Cart is empty</h1>
  {{/if}}
</div>