<div class='product'>
  <h1 class="card-panel teal lighten-2">{{product.title}}</h1>

  <div class="row">
    <div class="col s5">
      <img src="{{product.img}}" alt="{{product.title}}">
    </div>
    <div class="col s7">
      <h3><u>Group</u>: {{product.group}}</h3>
      <h3><u>Description</u>:</h3>{{{product.description}}}
    </div>
    <div class="col s12">
      <p class='price big'>{{product.price}}</p>
    </div>
  </div>
</div>