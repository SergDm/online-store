<div class="nav-wrapperBread">
  <div class="col s12">
    <a href="/" class="breadcrumb">HOME</a>
  </div>
</div>
<h1 class="card-panel teal lighten-2">Articles</h1>
{{#if articles.length}}
{{#each articles}}
<div class='blockArticle'>
  <h2 class="header">{{title}}</h2>
  <span><b>Author:</b> {{author}}</span>
  <p class="date">{{date}}</p>
      <img src="{{img}}">
    <p class="textArticle">{{{text}}}</p>
    <a class="waves-effect waves-light btn" href="/articles/{{id}}">Open</a>
</div>
{{/each}}
{{else}}
<p>None</p>
{{/if}}